<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="keywords" content="HTML, CSS, JavaScript">
  <meta name="description" content="PJS">
  <meta name="author" content="PJS">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link rel="stylesheet" type="text/css" href="/css/navBar.css" />
  <link rel="stylesheet" type="text/css" href="/iconfont/material-icons.css" />
  <link rel="stylesheet" type="text/css" href="/matIconFix/index.css" />
  <link rel="stylesheet" type="text/css" href="/css/cart.css" />
  <link rel="icon" href="/favicon/favicon.ico?v=2" type="image/x-icon" />

  <script defer type="text/javascript" src="/js/navBar.js"></script>
  <script defer type="text/javascript" src="/js/validation/user.js"></script>

  <title>PJS</title>
</head>

<body>
  <div class="cartContainer">
    <!-- <div class="cartRow">
      <div class="cartCol">
        <div class="cartColHeader">#</div>
      </div>
      <div class="cartCol">
        <div class="cartcolHeader">Remove</div>
      </div>
      <div class="cartCol">
        <div class="cartColHeader">Image</div>
      </div>
      <div class="cartCol">
        <div class="cartcolHeader cartColBodyPullLeft">Name</div>
      </div>
      <div class="cartCol">
        <div class="cartColHeader">Quantity</div>
      </div>
      <div class="cartCol">
        <div class="cartColHeader">Price</div>
      </div>
    </div> -->
    <% cart.items.forEach(item => { %>
      <div class="cartRow">
        <!-- <div class="cartCol">
          <div class="cartColBody">
            <%= item.id %>
          </div>
        </div> -->
        <div class="cartCol">
          <div class="cartColBody">
            <image class="cartImage" src="<%= item.imageCard %>" />
          </div>
        </div>
        <div class="cartCol">
          <div class="cartColBody cartColBodyPullLeft">
            <%= item.name %>
          </div>
        </div>
        <div class="cartCol">
          <div class="cartColBody">
            <div class="cartRockerWrapper">
              <form method="POST" action="/cart/<%= item.id %>/REMOVE?_method=PUT">
                <button class="material-icons cartRockerQuantityBtn cartRockerRemove" type="submit">remove</button>
              </form>
              <div class="cartRockerValue">
                <%= item.quantity %>
              </div>
              <form method="POST" action="/cart/<%= item.id %>/ADD?_method=PUT">
                <button class="material-icons cartRockerQuantityBtn cartRockerAdd type=" submit">add</button>
              </form>
            </div>
          </div>
        </div>
        <div class="cartCol">
          <div class="cartColBody">
            <form method="POST" action="/cart/<%= item.id %>?_method=DELETE">
              <button type="submit" class="material-icons cartBtn cartBtnRemove">delete</button>
            </form>
          </div>
        </div>
        <div class="cartCol">
          <div class="cartColBody">
            <%= item.formattedCost %>
          </div>
        </div>
      </div>
      <% }); %>
      <form method="POST" action="/saveCart?_method=POST">
        <button type="submit" class="material-icons cartBtn">done</button>
      </form>
      <div class="cartTotalsContainer">
        <div class="cartTotals">Total: <%= cart.totalCost %>
        </div>
      </div>
  </div>
</body>

</html>