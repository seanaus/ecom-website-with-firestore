<a href="/product/<%= product.id %>" 
  class="productCardLink" 
  data-node-type="product" 
  data-node-id="<%= product.id %>" 
  data-node-productLevel01Id="<%= product.productLevel01Id %>"
  data-node-productLevel02Id="<%= product.productLevel02Id %>"
  data-node-productLevel03Id="<%= product.productLevel03Id %>">
  <div class="productCard">
    <div class="productCardName"><%= product.name %></div>
    <div
      class="productCardImage"
      style="background-image: url('<%= product.imageCard %>')"
    ></div>
    <div class="productCardUnitCost"><%= product.formattedCost %></div>
  </div>
</a>
